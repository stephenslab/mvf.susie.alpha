w <- rep(zeta,sum(lengths(indx_lst))) # setting the weight to fit the weighted ash problem
tlength <- ncol(L) - 1
mixsqp_out <- mixsqp(L,
                     w,
                     log = TRUE,
                     x0 = c(1,rep(1e-30,tlength)), # put starting point close to sparse solution
                     control = list(
                       eps = 1e-6,
                       numiter.em = 20,
                       verbose = FALSE
                     )
)
out <- mixsqp_out$x